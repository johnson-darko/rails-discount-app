<div class="position-relative">
  <div class="card-category card-large" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%#= @store.photo.attached? ? cl_image_path(@store.photo.key) : asset_path('store_background.jpg') %>)">
    <p><%= @store.name %></p>
  </div>
  <span class="product-tag"><%#= pluralize(@store.products.size, "product") %></span>
</div>
<div class="container mb-5">
  <div class="d-flex justify-content-between my-4">
    <span class="mb-2 d-block"><small><em class="text-muted"><%= "You dont have any products yet!" if @store.products.empty? %></em></small></span>
    <div>
     <!--  <button type="button" class="btn btn-flat" data-bs-toggle="modal" data-bs-target="#new_cate_modal">
        Add a product
      </button> -->
     <%= link_to "Add Product", new_store_product_path(@store), class: "btn btn-cancel" %>

    <%#= f.number_field :user_id, id: :store_user_id, class:"form-control", value: current_user.id, type: :hidden %>
      <%= link_to "delete this store", store_path(@store), class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Are. you sure you want to delete this store?" } %>
    </div>
  </div>
 </div>

 <%= link_to "Show products",store_product_path(@store), class: "btn btn-cancel" %>
<%= render "products/modal", store: @store, product: @product %>

